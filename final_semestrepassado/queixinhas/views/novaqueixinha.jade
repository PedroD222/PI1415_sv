extends layout

block content
	div.container
		div.col-md-offset-3.col-md-6
			//tabela post queixinha
			div.panel.panel-info(style='margin-top: 100px')
				div.panel-body
					form(action='/queixinhas/new', method='post')
						div(style='margin-bottom: 30px; height 150%')
							textarea.form-control(type='text', placeholder='Título', name='title', style='resize: none', required)
						div(style='margin-bottom: 30px')
							textarea.form-control(type='text', placeholder='Descrição(Opcional)', name='desc', style='resize: none')
						div(style='margin-bottom: 30px')
							textarea.form-control(type='text', placeholder='Categorias', name='categoria', style='resize: none')
						div(style='margin-bottom: 30px')
							textarea.form-control(type='text', placeholder='Localização', name='Localização', style='resize: none')
						button(class='btn btn-success', type='submit') Submeter